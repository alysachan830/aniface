{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Override to enable output
    "noEmit": false,
    "allowImportingTsExtensions": false,
    
    // Output settings
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    // Better compatibility for npm packages
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}

